@using Attendence_System.ViewModel
@model LectureWithStudentsViewModel

<h4 class="mt-3 mb-3 text-center">@Model.LectureTitle محاضرة</h4>

<h2 class="mt-3 mb-3 text-center">@Model.StudentsCount = عدد الطلاب المسجلين فى المحاضرة  </h2>

<!-- الزر مع القائمة المنسدلة لتصدير البيانات -->
<div class="mb-3">
    <div class="dropdown">
        <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
            تصدير البيانات
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <li><a class="dropdown-item" href="#" onclick="exportToExcel()">تصدير إلى Excel</a></li>
        </ul>
    </div>
</div>
<!-- الجدول -->
<table id="studentsTable" class="table table-striped table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>University Code</th>
            <th>Seat number</th>
            <th>Recorded By</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.FullName</td>
                <td>@student.idcollege</td>
                <td>@student.code</td>
                <td class="bg-danger">@student.SenderName</td>
                <td class="text-center">
                    <button class="btn btn-danger rounded rounded-3 ms-2 js-delete" data-id="@student.StudentId" data-type="student" aria-label="Delete @student.StudentId">
                        <i class="bi bi-trash3"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>


<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.5/FileSaver.min.js"></script>
